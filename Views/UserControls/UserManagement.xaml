<UserControl x:Class="MovieLibrary.Views.UserControls.UserManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MovieLibrary.Views.UserControls"
             xmlns:CustomControls="clr-namespace:MovieLibrary.Views.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="5">

        <!-- Heading -->
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left">

            <TextBlock Text="User Management"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2D5A8C"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <Border CornerRadius="10"
                Background="#F7FAFC"
                Padding="30"
                BorderBrush="#B0C4DE"
                BorderThickness="1"
                Margin="45">

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">

                <!-- Form Heading -->
                <TextBlock Text="New User"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2D5A8C"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15">

                    <TextBlock Text="ID:"
                               Width="100"
                               FontWeight="SemiBold"/>

                    <CustomControls:FormTextBox x:Name="IdBox"
                                                Width="250"
                                                Placeholder="Search by ID"
                                                Margin="0,0,20,10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,25">

                    <TextBlock Text="Name:"
                               Width="100"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>

                    <CustomControls:FormTextBox x:Name="NameBox"
                                                Width="250"
                                                Placeholder="Search by ID"
                                                Margin="0,0,20,10"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button x:Name="AddOrSaveButton"
                            Content="Add User"
                            Width="120"
                            Padding="5"
                            Height="36"
                            Margin="0,0,40,0"
                            Background="#2D5A8C"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="AddOrSaveButton_Click"/>

                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Width="100"
                            Padding="5"
                            Height="36"
                            Background="#B0C4DE"
                            Foreground="#2D5A8C"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>


    </Grid>
</UserControl>