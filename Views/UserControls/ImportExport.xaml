<UserControl x:Class="MovieLibrary.Views.UserControls.ImportExport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="5">
        <Border CornerRadius="10"
                Background="#F7FAFC"
                Padding="10"
                BorderBrush="#B0C4DE"
                BorderThickness="1"
                Margin="0,0,0,80">
            <StackPanel>

                <!-- Info Text -->
                <TextBlock x:Name="Info"
                           Text="Import Data From The Json file"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2D5A8C"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="InfoSub"
                           Text="Export App Data as Json file"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2D5A8C"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,25">

                    <Button x:Name="ImportMovieButton"
                            Width="200"
                            Padding="15"
                            Height="40"
                            Margin="0,0,40,0"
                            Background="#2D5A8C"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ImportMovieButton_Click">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/assets/import.png"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="Import Data"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <Button x:Name="ExportMovieButton"
                            Width="200"
                            Padding="15"
                            Height="40"
                            Margin="0,0,40,0"
                            Background="#2D5A8C"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ExportMovieButton_Click">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/assets/export.png"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="Export Data"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>