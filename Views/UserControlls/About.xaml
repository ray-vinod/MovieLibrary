<UserControl x:Class="MovieLibrary.Views.UserControlls.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Movie Library"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#2D5A8C"
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>
            <TextBlock Text="Version 1.0"
                       FontSize="16"
                       Foreground="#555"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>
            <TextBlock Text="A simple and user-friendly application to manage your movie collection, users, and borrowing history."
                       FontSize="18"
                       Foreground="#444"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Developed by Bibek Subedi, 2025"
                       FontSize="14"
                       Foreground="#888"
                       TextAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>