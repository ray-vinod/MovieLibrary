<UserControl x:Class="MovieLibrary.Views.CustomControlls.FormTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieLibrary.Views.CustomControlls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <!-- TextBox -->
        <TextBox x:Name="Input" 
                 FontSize="16" 
                 FontWeight="Light" 
                 Background="Transparent"
                 Padding="5" 
                 VerticalAlignment="Center" 
                 TextChanged="Input_TextChanged" />

        <!-- Placeholder TextBox -->
        <TextBlock x:Name="PlaceholderTextBlock" 
                   FontSize="16" 
                   FontWeight="Light" 
                   VerticalAlignment="Center" 
                   Foreground="DarkGray" 
                   HorizontalAlignment="Center" 
                   Text="{Binding Placeholder, UpdateSourceTrigger=PropertyChanged}" 
                   Panel.ZIndex="-1" />

        <Button Name="ClearButton" 
                HorizontalAlignment="Right" 
                Background="Transparent" 
                Content="X"
                BorderThickness="0" 
                Foreground="LightGray" 
                Margin="0,0,5,0" 
                Height="20" 
                Width="10"
                Click="ClearButton_Click" 
                Visibility="Hidden" />
        
    </Grid>
</UserControl>
