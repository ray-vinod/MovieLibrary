<UserControl x:Class="MovieLibrary.Views.UserControls.HowToUse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <ScrollViewer>
        <StackPanel Margin="30">
            <TextBlock Text="How to Use Movie Library"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2D5A8C"
                       Margin="0,0,0,20"/>
            <TextBlock Text="• Home: View dashboard and quick stats. and application theme image"
                       FontSize="16"
                       Margin="0,0,0,10"/>
            <TextBlock Text="• Movie Management: Add, edit, or remove movies from your collection."
                       FontSize="16"
                       Margin="0,0,0,10"/>
            <TextBlock Text="• User: Manage users"
                       FontSize="16"
                       Margin="0,0,0,10"/>
            <TextBlock Text="• Borrow History: Track which user borrowed which movie and when."
                       FontSize="16"
                       Margin="0,0,0,10"/>
            <TextBlock Text="• Help: Access this guide and information about the app."
                       FontSize="16"
                       Margin="0,0,0,20"/>
            <TextBlock Text="Limitations"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#B22222"
                       Margin="0,20,0,10"/>
            <TextBlock Text="• No cloud sync: Data is stored In-Memory storage only, so once is closed all data are loosed or app is fresh start."
                       FontSize="16"
                       Margin="0,0,0,5"/>
            <TextBlock Text="• No advanced search or filtering. Just implemented Linear and Binary search and the sorting Bubble sort and Merge sort used for Title and Release Year"
                       FontSize="16"
                       Margin="0,0,0,5"/>
            <TextBlock Text="• No multi-user or network support."
                       FontSize="16"
                       Margin="0,0,0,5"/>
            <TextBlock Text="• Designed for small to medium collections."
                       FontSize="16"
                       Margin="0,0,0,5"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>