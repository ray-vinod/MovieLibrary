<UserControl x:Class="MovieLibrary.Views.UserControls.UserManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MovieLibrary.Views.UserControls"
             xmlns:CustomControls="clr-namespace:MovieLibrary.Views.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- Shared Styles -->
    <UserControl.Resources>
        <Style x:Key="UserGridViewCellTextStyle"
                TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="5,4"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="5">
        <ScrollViewer x:Name="MainScrollViewer"
                VerticalScrollBarVisibility="Auto"
                Background="White">
            <StackPanel Margin="5"
                    HorizontalAlignment="Center"
                    Width="700">

                <!-- User Form -->
                <Border CornerRadius="10"
                        Background="#F7FAFC"
                        Padding="10"
                        BorderBrush="#B0C4DE"
                        BorderThickness="1"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock x:Name="FormHeading"
                                   Text="New User"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#2D5A8C"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,25">
                            <CustomControls:FormTextBox x:Name="NameBox"
                                                        Width="250"
                                                        Placeholder="Enter user name"
                                                        Margin="0,0,20,0"
                                                        TextChanged="NameBox_TextChanged"/>

                            <Button x:Name="AddOrSaveButton"
                                    Width="140"
                                    Height="36"
                                    Background="#2D5A8C"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="AddOrSaveButton_Click">
                                <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                    <Image Source="/assets/add.png"
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Add User"
                                            VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- User List -->
                <Border CornerRadius="10"
                        Background="#F7FAFC"
                        Padding="10"
                        BorderBrush="#B0C4DE"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="User Records"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#2D5A8C"
                                   Margin="0,0,0,10"/>

                        <ListView x:Name="UserListView"
                                  Height="180"
                                  BorderThickness="0"
                                  Background="White"
                                  AlternationCount="2">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch"/>
                                    <Setter Property="Background"
                                            Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="ItemsControl.AlternationIndex"
                                                Value="1">
                                            <Setter Property="Background"
                                                    Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID"
                                            Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Id}"
                                                        Style="{StaticResource UserGridViewCellTextStyle}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Name"
                                            Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}"
                                                        Style="{StaticResource UserGridViewCellTextStyle}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Actions"
                                            Width="180">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Edit"
                                                               Margin="0,0,10,0"
                                                               Foreground="#2D5A8C"
                                                               Cursor="Hand"
                                                               TextDecorations="Underline"
                                                               FontWeight="Bold"
                                                               Style="{StaticResource UserGridViewCellTextStyle}"
                                                               MouseLeftButtonUp="EditText_MouseLeftButtonUp"/>
                                                    <TextBlock Text="Delete"
                                                               Foreground="#B22222"
                                                               Cursor="Hand"
                                                               TextDecorations="Underline"
                                                               FontWeight="Bold"
                                                               Style="{StaticResource UserGridViewCellTextStyle}"
                                                               MouseLeftButtonUp="DeleteText_MouseLeftButtonUp"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Pagination -->
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                            <Button x:Name="PreviousButton"
                                    Content="Previous"
                                    Width="80"
                                    Margin="5,0"
                                    Padding="5,2"
                                    Background="#B0C4DE"
                                    Foreground="#2D5A8C"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="PreviousPage_Click"/>
                            <TextBlock x:Name="PageInfoText"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5A8C"
                                       Margin="10,0"/>
                            <Button x:Name="NextButton"
                                    Content="Next"
                                    Width="80"
                                    Margin="5,0"
                                    Padding="5,2"
                                    Background="#B0C4DE"
                                    Foreground="#2D5A8C"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="NextPage_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>